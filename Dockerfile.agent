# syntax=docker/dockerfile:1.7

#############################
# Build Stage
#############################
FROM --platform=$BUILDPLATFORM golang:1.24-alpine AS build
ARG TARGETOS TARGETARCH
WORKDIR /workspace

# Enable module caching early
COPY go.mod go.sum ./
RUN --mount=type=cache,target=/go/pkg/mod \
	go mod download

# Copy source
COPY . .

# Build (static, reduced size)
RUN --mount=type=cache,target=/go/pkg/mod \
    CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH \
    go build -ldflags="-s -w" -trimpath -o /out/iprule-agent ./cmd/agent

#############################
# Final Stage
#############################
FROM registry.redhat.io/ubi10:latest AS final
LABEL org.opencontainers.image.title = "iprule-agent" \
      org.opencontainers.image.source = "https://github.com/mariusbertram/ip-rule-operator"\
      org.opencontainers.image.description = "Agent managing Linux policy routing rules (ip rule) via IPRuleConfig CRs" \
      org.opencontainers.image.licenses = "Apache-2.0"

# Copy binary
COPY --from=build /out/iprule-agent /iprule-agent

# Non-root (Capabilities added via Pod SecurityContext â€“ NET_ADMIN)
USER root:root

ENTRYPOINT ["/iprule-agent"]
